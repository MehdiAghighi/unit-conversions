{
    "name": "mehdiaghighi/unit-conversions",
    "description": "Converts Units to one another",
    "keywords": [
        "Mehdi Aghighi",
        "unit-conversions"
    ],
    "homepage": "https://github.com/MehdiAghighi/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehdi Aghighi",
            "email": "mamaliosezar@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "MehdiAghighi\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MehdiAghighi\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes --config=.php_cs.dist.php"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
